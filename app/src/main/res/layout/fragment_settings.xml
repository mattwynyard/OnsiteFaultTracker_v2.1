<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/common_fragment_top_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/settings_layout_top_margin"
        android:layout_above="@+id/required_storage_text_view">

    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/camera_id_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_text_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/setting_item_horizontal_padding"
                android:paddingEnd="@dimen/setting_item_horizontal_padding"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_dark"
                android:text="@string/settings_camera_id_title"
                />

            <TextView
                android:id="@+id/camera_id_edit_text"
                android:layout_width="@dimen/settings_text_view_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/setting_item_horizontal_padding"
                android:layout_marginEnd="@dimen/setting_item_horizontal_padding"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/tap_camera_id"
                />

            <View
                android:id="@+id/camera_id_bottom_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/setting_divider_horizontal_padding"
                android:layout_marginEnd="@dimen/setting_divider_horizontal_padding"
                android:background="@color/divider_color"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <include layout="@layout/setting_item_layout"
            android:id="@+id/frequency_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"/>

        <include layout="@layout/setting_item_layout"
            android:id="@+id/image_size_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"/>

        <include layout="@layout/setting_item_layout"
            android:id="@+id/recording_hours_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"/>

        <include layout="@layout/setting_item_layout"
            android:id="@+id/exposure_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"/>

        <include layout="@layout/setting_item_layout"
            android:id="@+id/focus_distance_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"/>

        <include layout="@layout/setting_item_layout"
            android:id="@+id/frame_duration_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"/>

