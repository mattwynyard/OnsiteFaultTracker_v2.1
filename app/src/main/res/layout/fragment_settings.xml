    </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/required_storage_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/available_storage_text_view"
        android:layout_marginStart="@dimen/setting_divider_horizontal_padding"
        android:layout_marginEnd="@dimen/setting_divider_horizontal_padding"
        android:layout_marginTop="@dimen/setting_divider_vertical_padding"
        android:layout_marginBottom="@dimen/setting_divider_vertical_padding"
        android:textColor="@color/text_dark"/>

    <TextView
        android:id="@+id/available_storage_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/restore_defaults_button"
        android:layout_marginStart="@dimen/setting_divider_horizontal_padding"
        android:layout_marginEnd="@dimen/setting_divider_horizontal_padding"
        android:layout_marginBottom="@dimen/setting_divider_vertical_padding"
        android:textColor="@color/text_dark"/>
    
    <Button
        android:id="@+id/restore_defaults_button"
        android:layout_width="@dimen/home_button_width"
        android:layout_height="@dimen/home_button_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/settings_restore_defaults"
        android:textColor="@color/text_light"
        android:paddingStart="@dimen/home_button_left_adjustment"
        android:textSize="@dimen/button_text_size"
        android:background="@drawable/orange_button_selector"
        />

</RelativeLayout>